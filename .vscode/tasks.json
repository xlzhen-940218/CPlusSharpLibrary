{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 生成活动文件",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "FileInfo.h",
                "FileInfo.cpp",
                "DirectoryInfo.h",
                "DirectoryInfo.cpp",
                "main.cpp",
                "-g",
                "-o",
                "bin/cplussharplibrary",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}